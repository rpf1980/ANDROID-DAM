<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="REGISTRO"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idEdtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/idEdtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/idEdtNombre"
        app:layout_constraintStart_toStartOf="@+id/idEdtNombre"
        app:layout_constraintTop_toBottomOf="@+id/idEdtNombre" />

    <Button
        android:id="@+id/idBtnRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="GO "
        app:layout_constraintEnd_toEndOf="@+id/idEdtPass"
        app:layout_constraintStart_toStartOf="@+id/idEdtPass"
        app:layout_constraintTop_toBottomOf="@+id/idEdtPass" />

    <Button
        android:id="@+id/idBtnToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="TO LOGIN"
        app:layout_constraintEnd_toEndOf="@+id/idBtnRegistro"
        app:layout_constraintStart_toStartOf="@+id/idBtnRegistro"
        app:layout_constraintTop_toBottomOf="@+id/idBtnRegistro" />
</androidx.constraintlayout.widget.ConstraintLayout>